{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "paths": {
            "@fortawesome/fontawesome-common-types": [
                "./node_modules/@fortawesome/fontawesome-common-types/index"
            ],
            "@/*": ["./src/*"]
        },
        "strictFunctionTypes": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/assets/js/GoogleSheetToJson.js",
        "src/assets/api/index.ts",
        "src/apollo/index.ts"
    ],
    "allowjs": true
}
